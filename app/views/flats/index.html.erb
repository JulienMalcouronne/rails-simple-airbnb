<div class="banner">
<h1>simple airbnb</h1>
 <form action="/flats/search" method="get">
  <input type="text" name="query" placeholder="Who are you looking for?">
  <input type="submit">
</form>
  <%= link_to "add a flat", flat_path("new")  %>
</div>


<h1><%= "all our flat (#{@flats.length})"%></h1>
<div>
<ul class="container">
  <% @flats.each do |flat| %>
    <li class="hotel">
    <img src="<%= flat.picture %>">
      <%= flat.name %>
      <br>
      <%= flat.address %>
      <br>
      <%= flat.description %>
      <br>
      <%= "â‚¬ #{flat.price_per_night}" %>
      <br>
      <%= "#{flat.number_of_guests} guests maximum" %>
      <br>
      <%= link_to "more info", flat_path(flat[:id]) %>
      <%= link_to "Edit", edit_flat_path(flat[:id]) %>
      <%= link_to "Remove",
            flat_path(flat),
            method: :delete,
            data: { confirm: "Are you sure?" } %>
    </li>

  <% end %>

</ul>
</div>
